#version 330 core

in vec3 n;
in vec3 l;

// Ouput data
out vec3 color;

void main()
{

	// Output color = red 
	vec3 lightColor = vec3(0.7,0.7,0.7);
	float lightPower = 50.0f;
	float cosTheta = clamp(0,1,dot(normalize(n), normalize(l)));
	color = vec3(0.1,0,0)+vec3(1,0,0)*cosTheta*lightPower*lightColor;

}
